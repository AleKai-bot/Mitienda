@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="container p-4">

    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">

                    <h3>Iniciar Sesión  </h3>
                </div>
                <img src="~/images/login.png" class="mx-auto w-50">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Index" method="POST">
                        <div class="form-group">
                            <input asp-for="Input.Email" placeholder="Email" class="form-control" auto />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Input.Password" placeholder="Contraseña" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-info btn-block"> Entrar</button>
                        </div>
                    </form>
                  
                 
                </div>
            </div>
        </div>
    </div>
</div>

